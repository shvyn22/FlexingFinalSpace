        <item name="colorAccent">@color/black800</item>
        <item name="colorSurface">@color/black800</item>
        <item name="backgroundColor">@color/black900</item>
        <item name="android:statusBarColor">@color/black900</item>

        <item name="android:textColor">@color/white50</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
